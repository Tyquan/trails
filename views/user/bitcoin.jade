extends layout

block content
  include nav.jade
  main(role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4")
    h1(class="text-center") CryptoCurrency:
    hr
    div(class="row")
      div(class="col-sm-3")
        div(id="bit-details")
          div(class="col")
            h1(class="text-center") Bitcoin
            hr
          p Current Price: $
            span= bit.market_price_usd
          p Already Mined: 
            span= bit.n_btc_mined
          p Total Bitcoins: 
            span= bit.totalbc
          p Bitcoins Left: 
            span= bit.totalbc - bit.n_btc_mined
        br
        button(class="btn btn-outline-primary btn-lg btn-block" id="explainData") Explain Data
      div(class="col-sm-9")
        canvas(id="bitcoin-chart")
    hr
    div(class="row")
      div(class="col-md-12")
        h2 Statistics
        br
        p Average Price: $
          span= average
        p Highest Price For 1 Bitcoin: $
          span= max
        p Lowest Price For 1 Bitcoin: $
          span= min
        p Dispersion: $
          span= dispersion
        p Variance: $
          span= variance
        p Standard Deviation: $
          span= standardDeviation
    hr
    div(class="container")
      h1 Create a New Bitcoin Wallet
      form(method="POST" action="/")
        input(type="text" name="tenzosrc" class="form-control" placeholder="Name of Your Custom Wallet")
        br
        input(type="submit" value="create" class="btn btn-success")
    div(id="margy")
  script(src="/javascripts/bitcoin/barchart.js")
  script(src="/javascripts/bitcoin/chart.js")