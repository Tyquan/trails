extends layout

block content
  include nav.jade
  main(role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4")
    h1(class="text-center") Dashboard:
    hr
    div(class="row")
      div(class="col-sm-4")
        h4 Income: 
          span(id="incomeTotal")= incomeTotal
      div(class="col-sm-4")
        h4 Expenses: 
          span(id="expenseTotal")= expenseTotal
      div(class="col-sm-4")
        h4 Outcome: 
          span(id="swimResult")= swimResult
    div(id="hideData")
      div(class="row")
        div(class="col-md-12")
          each income in incomes
            p(id="incomeAmount")= income.amount
            p(id="incomeDate")= income.create_date
          each expense in expenses
            p(id="expenseAmount")= expense.amount
            p(id="exenseDate")= expense.create_date
  script(src="/javascripts/charts/income-expense.js")