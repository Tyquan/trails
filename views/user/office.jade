extends ../layout

block content
  div(class="container-fluid")
    div(class="row")
      div(class="col-md-2")
        include nav.jade
      div(class="col-md-10")
        h1(class="text-center") Your Office
        hr
        div(id="office-marg")
        div(class="row")
          div(class="col-md-5")
            div(id="adminVideoContainer")
              video(id="localVideo" autoplay)
              div(id="callOptions")
                div(class="row")
                  div(class="col-xs-6")
                    button(id="showMe" class="btn btn-danger") Start Recording
                  div(class="col-xs-6")
                    button(id="stopRecording" disabled="" class="btn btn-info") Stop Recording
                br
          div(class="col-md-7")
            div(id="textEditor")
              textarea(class="form-control" placeholder="Enter Some Notes" width="100%" height="100%" rows="15")
            br
            button(id="saveNote" class="btn btn-info") Save to Desktop
  script(src="/javascripts/office/office.js")