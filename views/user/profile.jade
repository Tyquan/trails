extends layout

block content
  include nav.jade
  main(role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4")
    div(class="row")
      div(class="col-md-10")
        div(id="block-profile")
          h1
            span= user.firstName
            span , 
            span= user.lastName
        div(class="row")
          div(class="col-sm-4")
            div(id="block-profile")
              h3 Profile
              hr
              p Lives in 
                span= user.city
                span , 
                span= user.state
              p Following: 
                span= user.following.length
              p Followers: 
                span= user.followers.length
              p Currently Logged In? 
                span= user.loggedIn
              p Email: 
                span= user.username
          div(class="col-sm-8")
            each post in user.posts
              div(id="block-profile")
                div(class="row")
                  div(class="col-sm-12")
                    p= user.username
                    p= post.create_date
                    p= post.body