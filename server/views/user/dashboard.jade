extends layout

block content
  main(role="main" class="col-md-12 ml-sm-auto col-lg-12")
    div(class="row")
      div(class="col-md-6")
        canvas(id="incomeLine-chart")
      div(class="col-md-6")
        canvas(id="expenses-chart")
    br
    div(class="row")
      div(class="col-md-4")
        h4(class="text-center") Income 
          span(id="incomeTotal")= incomeTotal
      div(class="col-md-4")
        h4(class="text-center") Expenses 
          span(id="expenseTotal")= expenseTotal
      div(class="col-md-4")
        h4(class="text-center") Result 
          span(id="swimResult")= swimResult
    hr
  script(src="/js/charts/incomeline.js")
  script(src="/js/charts/expensesline.js")
  script(src="/js/dashboard.js")